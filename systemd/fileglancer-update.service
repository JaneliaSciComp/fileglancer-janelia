[Unit]
Description=Update Fileglancer database from Janelia wiki
After=network.target

[Service]
Type=oneshot
WorkingDirectory=/opt/deploy/fileglancer-janelia
EnvironmentFile=/opt/deploy/fileglancer-hub/.env.central
ExecStart=/usr/local/bin/pixi run update-db

# Logging
StandardOutput=journal
StandardError=journal
SyslogIdentifier=fileglancer-update
